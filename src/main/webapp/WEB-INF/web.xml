<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>DynamicEntityServlet</servlet-name>
        <servlet-class>com.mrsoftware.udb.servlets.DynamicEntityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DynamicSchemaServlet</servlet-name>
        <servlet-class>com.mrsoftware.udb.servlets.FormSchemaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.mrsoftware.udb.servlets.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListServlet</servlet-name>
        <servlet-class>com.mrsoftware.udb.servlets.ListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/TestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DynamicEntityServlet</servlet-name>
        <url-pattern>/entities</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DynamicSchemaServlet</servlet-name>
        <url-pattern>/forms</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
